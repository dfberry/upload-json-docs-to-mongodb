{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true, 
    "resolveJsonModule":true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["./scripts","node_modules"]
}